<div class="container">
  <img src="https://img.lovepik.com/element/40109/2439.png_300.png"></img>
  <h1>Eat-Da-Burger!</h1>
  <div class="row justify-content-around no-gutters">
    <div class="col-4">
      <ul>
        {{#each burgers}}
          {{#unless eaten}}            
            <li>
           
                {{name}}              
              
            </li>     
          {{/unless}}
        {{/each}}
      </ul>
    </div> 
    <div class="col-3">
      <ul>
        {{#each burgers}}
          {{#unless eaten}}            
            <li>
             
              <button class="devour-burger btn btn-primary btn-sm" type="button" data-id="{{this.id}}">Devour it!</button>
           
            </li>     
          {{/unless}}
        {{/each}}
      </ul>
    </div> 
    <div class="col-4">
      <ul>
        {{#each burgers}} 
          {{#if eaten}}             
            <li>
              {{name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Enter a burger you want to eat! Click the "submit" button.</h2>
  <form class="create-form">

    <div class="form-group">
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Submit</button>
  </form>
</div>